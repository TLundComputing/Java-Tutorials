<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tjl.fxlivelesson.PrimaryController">
   <children>
      <Label text="Welcome" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <Label text="Username: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
      <TextField fx:id="userField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
      <Label text="Password: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
      <PasswordField fx:id="passField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
      <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="bottom_right">
          <children>
              <Button text="Sign In" onAction="#submitData" />
              <Button text="Cancel" onAction="#cancelBtn" />
          </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
